@page
@model YasiroRegrave.Pages.UserListModel

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/UserList.css">
</head>

<div class="container">
    <div class="header-container">
        <img src="~/images/user.png" alt="User Icon" class="header-icon">
        <h2 class="header-title">ユーザー情報編集</h2>
        <a href="/UserEdit" class="btn btn-primary new-user-btn">新規追加</a>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>販売会社</th>
                        <th>名前</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.VenderName</td>
                            <td>@user.Name</td>
                            <td class ="edit-btn-cell">
                                <a href="/UserEdit" class="btn btn-secondary">編集</a>
                                <a href="/UserList" class="btn btn-secondary">削除</a>
                            </td class>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>