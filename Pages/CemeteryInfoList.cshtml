@page
@model CemeteryInfoListModel
@{
    @using YasiroRegrave.Pages.common;
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <title>墓所情報一覧</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/UserList.css">
    <link rel="stylesheet" href="~/css/SideBar.css">
</head>
<body>
    <div class="container-fluid d-flex">
        <div class="sidebar">
            <div class="sidebar-header">
                <a href="https://www.yasiro.co.jp/reien/ikoma/">
                    <img src="~/images/yasiro.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <div class="sidebar-header">
                <a href="/PlotSelection">
                    <img src="~/images/akikukaku.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <ul class="sidebar-menu">
                @if (Model.Authority == (int)Config.AuthorityType.管理者)
                {
                    <li><a href="/UserList">ユーザー情報一覧</a></li>
                    <li><a href="/VenderList">販売会社情報一覧</a></li>
                    <li><a href="/ReienList">メール送信先一覧</a></li>
                }
                <li><a href="/CemeteryInfoList">墓所情報一覧</a></li>
            </ul>
        </div>
        <div class="content">
            <div class="header-container">
                <img src="~/images/user.png" alt="User Icon" class="header-icon">
                <h2 class="header-title">墓所情報一覧</h2>
                <div class="header-form">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>コード</th>
                                <th>霊園名</th>
                                <th>エリア名</th>
                                <th>区画名</th>
                                <th>墓所名</th>
                                <th>画像1</th>
                                <th>画像2</th>
                                <th>操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cemeteryinfo in Model.CemeteryInfos)
                            {
                                <tr>
                                    <td>@($"{cemeteryinfo.ReienCode}-{cemeteryinfo.AreaCode}-{cemeteryinfo.SectionCode}-{cemeteryinfo.CemeteryCode}")</td>
                                    <td>@cemeteryinfo.ReienName</td>
                                    <td>@cemeteryinfo.AreaName</td>
                                    <td>@cemeteryinfo.SectionName</td>
                                    <td>@cemeteryinfo.CemeteryName</td>
                                    <td>@(string.IsNullOrEmpty(cemeteryinfo.Image1Fname) ? Config.ExistType.未 : Config.ExistType.済)</td>
                                    <td>@(string.IsNullOrEmpty(cemeteryinfo.Image2Fname) ? Config.ExistType.未 : Config.ExistType.済)</td>
                                    <td class="edit-btn-cell">
                                        <form method="get" class="btn-form" action="/CemeteryInfoEdit" style="display: inline-block; margin-right: 1px;">
                                            <input type="hidden" name="Index" value="@cemeteryinfo.CemeteryInfoIndex" />
                                            <button type="submit" class="btn btn-secondary">編集</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
