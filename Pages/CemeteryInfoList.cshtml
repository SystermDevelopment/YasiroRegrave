@page
@model CemeteryInfoListModel
@{
    @using YasiroRegrave.Pages.common;
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <title>墓所情報一覧</title>
    <meta name="google" content="notranslate" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="~/css/header.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="~/css/UserList.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="~/css/SideBar.css?v=@DateTime.Now.Ticks">
</head>
<body>
    <div class="container-fluid d-flex">
        <div class="sidebar">
            <div class="sidebar-header">
                <a href="https://www.yasiro.co.jp/reien/ikoma/">
                    <img src="~/images/yasiro.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <div class="sidebar-header">
                <a href="/PlotSelection">
                    <img src="~/images/akikukaku.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <ul class="sidebar-menu">
                @if (Model.Authority == (int)Config.AuthorityType.管理者)
                {
                    <li><a href="/UserList">ユーザー情報一覧</a></li>
                    <li><a href="/VenderList">販売会社情報一覧</a></li>
                    <li><a href="/ReienList">メール送信先一覧</a></li>
                }
                <li><a href="/CemeteryInfoList" style="font-weight: bold;">墓所情報一覧</a></li>
                @if (Model.LoginId != null && Model.LoggedInUser != null)
                {
                    <div class="sidebar-footer">
                        <span>＜ログインユーザー＞<br /></span>
                        <span>@Model.LoggedInUser.VenderName<br /></span>
                        <span>@Model.LoggedInUser.Name</span>
                        <div class="sidebar-button">
                            <form method="post" asp-page-handler="Logout">
                                <button type="submit" class="btn btn-danger">ログアウト</button>
                            </form>
                        </div>
                    </div>
                }
            </ul>
        </div>
        <div class="content">
            <div class="header-container">
                <img src="~/images/user.png" alt="User Icon" class="header-icon">
                <h2 class="header-title">墓所情報一覧</h2>
                <div class="header-form">
                </div>
            </div>

            <!-- 検索条件 -->
            <div class="form-search">
                <form method="post">
                    <div class="search-controls">
                        <div class="search-group">
                            <label for="filter-reien">霊園</label>
                            <select class="search-select" name="FilterReien" id="filter-reien">
                                <option value="-1" selected>-</option>
                                @foreach (var reien in Model.Reiens)
                                {
                                    <option value="@reien.ReienIndex" selected="@(reien.ReienIndex == Model.FilterReien ? "selected" : null)">@reien.ReienName</option>
                                }
                            </select>
                        </div>
                        <div class="search-group">
                            <label for="filter-area">エリア</label>
                            <select class="search-select" name="FilterArea" id="filter-area">
                                <option value="-1" selected>-</option>
                                @foreach (var area in Model.Areas)
                                {
                                    <option value="@area.AreaIndex" selected="@(area.AreaIndex == Model.FilterArea ? "selected" : null)">@area.AreaName</option>
                                }
                            </select>
                        </div>
                        <div class="search-group">
                            <label for="filter-section">区画</label>
                            <select class="search-select" name="FilterSection" id="filter-section">
                                <option value="-1" selected>-</option>
                                @foreach (var sect in Model.Sections)
                                {
                                    <option value="@sect.SectionIndex" selected="@(sect.SectionIndex == Model.FilterSection ? "selected" : null)">@sect.SectionName</option>
                                }
                            </select>
                        </div>
                        <div class="search-group">
                            <label for="filter-image">画像</label>
                            <select class="search-select" name="FilterImage" id="filter-image">
                                <option value="-1" selected>-</option>
                                <option value="0" selected="@(0 == Model.FilterImage ? "selected" : null)">未あり</option>
                                <option value="1" selected="@(1 == Model.FilterImage ? "selected" : null)">済のみ</option>
                            </select>
                        </div>
                        <div class="search-group">
                            <label for="filter-image">価格</label>
                            <select class="search-select" name="FilterPrice" id="filter-price">
                                <option value="-1" selected>-</option>
                                <option value="0" selected="@(0 == Model.FilterPrice ? "selected" : null)">未</option>
                                <option value="1" selected="@(1 == Model.FilterPrice ? "selected" : null)">済</option>
                            </select>
                        </div>
                        <div class="search-group">
                            <label for="filter-reserve">公開状態</label>
                            <select class="search-select" name="FilterRelease" id="filter-reserve">
                                <option value="-1" selected>-</option>
                                <option value="@((int)Config.ReleaseStatusType.準備中)" selected="@((int)Config.ReleaseStatusType.準備中 == Model.FilterRelease ? "selected" : null)">@(Config.ReleaseStatusType.準備中)</option>
                                <option value="@((int)Config.ReleaseStatusType.販売中)" selected="@((int)Config.ReleaseStatusType.販売中 == Model.FilterRelease ? "selected" : null)">@(Config.ReleaseStatusType.販売中)</option>
                            </select>
                        </div>
                        <input type="hidden" name="Action" value="Search" />
                        <button type="submit" class="btn btn-secondary">検索</button>
                    </div>
                </form>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>霊園名</th>
                                    <th>エリア名</th>
                                    <th>区画番号</th>
                                    <th>区画名</th>
                                    <th>墓所名</th>
                                    <th>区画画像</th>
                                    <th>墓石画像</th>
                                    <th>価格登録</th>
                                    <th>公開状態</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cemeteryinfo in Model.CemeteryInfos)
                                {
                                    <tr>
                                        <td>@cemeteryinfo.ReienName</td>
                                        <td>@cemeteryinfo.AreaName</td>
                                        <td>@($"{cemeteryinfo.SectionCode}-{cemeteryinfo.CemeteryCode}")</td>
                                        <td>@cemeteryinfo.SectionName</td>
                                        <td>@cemeteryinfo.CemeteryName</td>
                                        <td style="@(string.IsNullOrEmpty(cemeteryinfo.Image1Fname) ? "color: red;" : "")">
                                            @(string.IsNullOrEmpty(cemeteryinfo.Image1Fname) ? Config.ExistType.未 : Config.ExistType.済)
                                        </td>
                                        <td style="@(string.IsNullOrEmpty(cemeteryinfo.Image2Fname) ? "color: red;" : "")">
                                            @(string.IsNullOrEmpty(cemeteryinfo.Image2Fname) ? Config.ExistType.未 : Config.ExistType.済)
                                        </td>
                                        <td style="@(cemeteryinfo.TotalPrice == 0 ? " color: red;" : "" )">
                                            @(cemeteryinfo.TotalPrice == 0 ? Config.ExistType.未 : Config.ExistType.済)
                                        </td>
                                        <td style="@(cemeteryinfo.ReleaseStatus == (int)Config.ReleaseStatusType.準備中 ? "color: red;" : "")">
                                            @cemeteryinfo.ReleaseName
                                        </td>
                                        <td class="edit-btn-cell">
                                            <form method="get" class="btn-form" action="/CemeteryInfoEdit" style="display: inline-block; margin-right: 1px;">
                                                <input type="hidden" name="Index" value="@cemeteryinfo.CemeteryInfoIndex" />
                                                <button type="submit" class="btn btn-secondary">編集</button>
                                            </form>
                                            <form method="post" class="btn-form" asp-page-handler="GenerateQRCode">
                                                <input type="hidden" name="sectionIndex" value="@cemeteryinfo.SectionIndex" />
                                                <input type="hidden" name="index" value="@cemeteryinfo.CemeteryInfoIndex" />
                                                <button type="submit" class="btn btn-primary">QR画像</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

<script>
    var Areas = @Html.Raw(Json.Serialize(Model.Areas));
    var Sections = @Html.Raw(Json.Serialize(Model.Sections));
</script>
<script src="~/js/CemeteryInfoList.js"></script>
