@page
@model YasiroRegrave.Pages.CemeteryInfoListModel
@{
        @using YasiroRegrave.Pages.common;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/UserList.css">
    <link rel="stylesheet" href="~/css/SideBar.css">
</head>
    <div class="sidebar">
        <div class="sidebar-header">
            <a href="https://www.yasiro.co.jp/reien/ikoma/">
                <img src="~/images/yasiro.png" alt="Sidebar Icon" class="sidebar-icon">
            </a>
        </div>
        <ul class="sidebar-menu">
            <li><a href="https://localhost:7147/UserList">ユーザー情報一覧</a></li>
            <li><a href="https://localhost:7147/VenderList">販売会社情報一覧</a></li>
            <li><a href="https://localhost:7147/ReienList">メール送信先一覧</a></li>
            <li><a href="https://localhost:7147/CemeteryInfoList">墓所情報一覧</a></li>
        </ul>
    </div>
<div class="container">
    <div class="header-container">
        <img src="~/images/user.png" alt="User Icon" class="header-icon">
        <h2 class="header-title">墓所情報一覧</h2>
        <div class="header-form">
@*         <form method="get" action="/CemeteryInfoEdit"style="margin-left: auto;">
            <button type="submit" class="btn btn-primary new-user-btn">新規追加</button>
        </form>
 *@        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                           <th>コード</th>
                           <th>霊園名</th>
                           <th>エリア名</th>
                           <th>区画名</th>
                           <th>墓所名</th>
                           <th>墓石画像1</th>
                           <th>墓石画像2</th>
                           <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cemeteryinfo in Model.CemeteryInfos)
                    {
                        <tr>
                            <td>@($"{cemeteryinfo.ReienCode}-{cemeteryinfo.AreaCode}-{cemeteryinfo.SectionCode}-{cemeteryinfo.CemeteryCode}")</td>
                            <td>@cemeteryinfo.ReienName</td>
                            <td>@cemeteryinfo.AreaName</td>
                            <td>@cemeteryinfo.SectionName</td>
                            <td>@cemeteryinfo.CemeteryName</td>
                            <td>@cemeteryinfo.Image1Fname</td>
                            <td>@cemeteryinfo.Image2Fname</td>
                            <td class ="edit-btn-cell">
                                 <form method="get"class="btn-form"action="/CemeteryInfoEdit"style="display: inline-block; margin-right: 1px;">
                                    <input type="hidden" name="Index" value="@cemeteryinfo.CemeteryInfoIndex"/>
                                    <button type="submit" class="btn btn-secondary">編集</button>
                                 </form>

                                <form method="post"class="btn-form"onsubmit="return confirm('@Message.M_Q0001')"style="display: inline-block; margin-right: 1px;">
                                      <input type="hidden"name="Index" value="@cemeteryinfo.CemeteryInfoIndex"/>
                                      <button type="submit" class="btn btn-warnning">削除</button>
                                  </form>
                            </td class>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>