@page
@model YasiroRegrave.Pages.CemeteryInfoEditModel
@{
    @using YasiroRegrave.Pages.common;
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <title>墓所情報編集</title>
    <meta name="google" content="notranslate" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="~/css/header.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="~/css/UserEdit.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="~/css/SideBar.css?v=@DateTime.Now.Ticks">
</head>
<body>
    <div class="container-fluid d-flex">
        <div class="sidebar">
            <div class="sidebar-header">
                <a href="https://www.yasiro.co.jp/reien/ikoma/">
                    <img src="~/images/yasiro.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <div class="sidebar-header">
                <a href="/PlotSelection">
                    <img src="~/images/akikukaku.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <ul class="sidebar-menu">
                @if (Model.Authority == (int)Config.AuthorityType.管理者)
                {
                    <li><a href="/UserList">ユーザー情報一覧</a></li>
                    <li><a href="/VenderList">販売会社情報一覧</a></li>
                    <li><a href="/ReienList">メール送信先一覧</a></li>
                }
                <li><a href="/CemeteryInfoList" style="font-weight: bold;">墓所情報一覧</a></li>
                @if (Model.LoginId != null && Model.LoggedInUser != null)
                {
                    <div class="sidebar-footer">
                        <span>＜ログインユーザー＞<br /></span>
                        <span>@Model.LoggedInUser.VenderName<br /></span>
                        <span>@Model.LoggedInUser.Name</span>
                    </div>
                }
            </ul>
        </div>
        <div class="content">
            <div class="container">
                <form method="post" enctype="multipart/form-data">
                    <div class="header-container">
                        <img src="~/images/user.png" alt="User Icon" class="header-icon">
                        <h2 class="header-title">墓所情報編集</h2>
                        <div class="header-form">
                            <input type="hidden" name="CemeteryInfoIndex" value="@Model.CemeteryInfoIndex" />
                            <button type="button" class="btn btn-secondary" onclick="onclickBack()">戻る</button>
                            <input type="hidden" name="index" value="@Model.CemeteryInfoIndex" />
                            <button class="btn btn-primary new-user-btn" type="submit">保存</button>
                        </div>
                    </div>

                    <div class="col-md-6 p-0">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="ReienName">霊園名</label>
                                    <span asp-validation-for="ReienName" class="text-danger"></span>
                                    <input type="text" asp-for="ReienName" class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="AreaName">エリア名</label>
                                    <span asp-validation-for="AreaName" class="text-danger"></span>
                                    <input type="text" asp-for="AreaName" class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="SectionName">区画名</label>
                                    <span asp-validation-for="SectionName" class="text-danger"></span>
                                    <input type="text" asp-for="SectionName" class="form-control" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="CemeteryName">墓所名</label>
                                    <span asp-validation-for="CemeteryName" class="text-danger"></span>
                                    <input type="text" asp-for="CemeteryName" class="form-control" readonly>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <label for="Image1" style="margin-bottom: 10px; font-weight: bold;">区画画像</label>
                                        <br>
                                        <span asp-validation-for="Image1" class="text-danger"></span>
                                        <input type="file" id="Image1" name="Image1" class="form-control-file" accept=".jpg, .jpeg, .png" onchange="updateFileName(this, 'image1FileName', 'hiddenImage1Fname', 'image1Preview', 'Image1Deleted', 'deleteImage1Button')">
                                        <input type="hidden" id="hiddenImage1Fname" name="Image1Fname" value="@Model.Image1Fname">
                                        @if (!string.IsNullOrEmpty(Model.Image1Fname))
                                        {
                                            <label id="image1FileName" style="display: block; margin-top: 10px;">@Model.Image1Fname</label>
                                            <img id="image1Preview" src="@Model.Image1FnameURL" alt="プレビュー画像" style="display: block; max-width: 100%; margin-top: 10px;">
                                            <button id="deleteImage1Button" type="button" onclick="deleteImage('image1Preview', 'Image1Deleted', 'image1FileName', 'deleteImage1Button')" class="btn btn-danger" style="margin-top: 10px;">削除</button>
                                        }
                                        else
                                        {
                                            <label id="image1FileName" style="display: none; margin-top: 10px;"></label>
                                            <img id="image1Preview" src="" alt="プレビュー画像" style="display: none; max-width: 100%; margin-top: 10px;">
                                            <button id="deleteImage1Button" type="button" onclick="deleteImage('image1Preview', 'Image1Deleted', 'image1FileName', 'deleteImage1Button')" class="btn btn-danger" style="display: none; margin-top: 10px;">削除</button>
                                        }
                                        <input type="hidden" id="Image1Deleted" name="Image1Deleted" value="false">
                                    </div>

                                    <div class="col-md-6">
                                        <label for="Image2" style="margin-bottom: 10px; font-weight: bold;">墓石画像</label>
                                        <br>
                                        <span asp-validation-for="Image2" class="text-danger"></span>
                                        <input type="file" id="Image2" name="Image2" class="form-control-file" accept=".jpg, .jpeg, .png" onchange="updateFileName(this, 'image2FileName', 'hiddenImage2Fname', 'image2Preview', 'Image2Deleted', 'deleteImage2Button')">
                                        <input type="hidden" id="hiddenImage2Fname" name="Image2Fname" value="@Model.Image2Fname">
                                        @if (!string.IsNullOrEmpty(Model.Image2Fname))
                                        {
                                            <label id="image2FileName" style="display: block; margin-top: 10px;">@Model.Image2Fname</label>
                                            <img id="image2Preview" src="@Model.Image2FnameURL" alt="プレビュー画像" style="display: block; max-width: 100%; margin-top: 10px;">
                                            <button id="deleteImage2Button" type="button" onclick="deleteImage('image2Preview', 'Image2Deleted', 'image2FileName', 'deleteImage2Button')" class="btn btn-danger" style="margin-top: 10px;">削除</button>
                                        }
                                        else
                                        {
                                            <label id="image2FileName" style="display: none; margin-top: 10px;"></label>
                                            <img id="image2Preview" src="" alt="プレビュー画像" style="display: none; max-width: 100%; margin-top: 10px;">
                                            <button id="deleteImage2Button" type="button" onclick="deleteImage('image2Preview', 'Image2Deleted', 'image2FileName', 'deleteImage2Button')" class="btn btn-danger" style="display: none; margin-top: 10px;">削除</button>
                                        }
                                        <input type="hidden" id="Image2Deleted" name="Image2Deleted" value="false">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<script>
    let editDataStruct = {
        ReienName: '',
        AreaName: '',
        SectionName: '',
        CemeteryName: '',
        Image1Fname: '',
        Image2Fname: '',
        Image1Deleted: false,
        Image2Deleted: false
    };

    let initData = Object.assign({}, editDataStruct);
    let editData = Object.assign({}, editDataStruct);
    var confMessage = '@Html.Raw(Message.M_Q0002)';

    document.addEventListener('DOMContentLoaded', function () {
        setEditData(initData);
    });

    function onclickBack() {
        setEditData(editData);
        if (!cmpEditData(initData, editData)) {
            if (!confirm(confMessage)) {
                return;
            }
        }
        window.location.href = '/CemeteryInfoList';
    }

    function setEditData(data) {
        data.ReienName = document.getElementById('ReienName').value;
        data.AreaName = document.getElementById('AreaName').value;
        data.SectionName = document.getElementById('SectionName').value;
        data.CemeteryName = document.getElementById('CemeteryName').value;
        data.Image1Fname = document.getElementById('hiddenImage1Fname').value;
        data.Image2Fname = document.getElementById('hiddenImage2Fname').value;
        data.Image1Deleted = document.getElementById('Image1Deleted').value === 'true';
        data.Image2Deleted = document.getElementById('Image2Deleted').value === 'true';
    }

    function cmpEditData(initData, editData) {
        return initData.ReienName === editData.ReienName
            && initData.AreaName === editData.AreaName
            && initData.SectionName === editData.SectionName
            && initData.CemeteryName === editData.CemeteryName
            && initData.Image1Fname === editData.Image1Fname
            && initData.Image2Fname === editData.Image2Fname
            && initData.Image1Deleted === editData.Image1Deleted
            && initData.Image2Deleted === editData.Image2Deleted;
    }

    function updateFileName(input, labelId, hiddenId, imgId, hiddenDeleteId, buttonId) {
        if (input.files && input.files[0]) {
            var fileName = input.files[0].name;
            var reader = new FileReader();

            reader.onload = function (e) {
                document.getElementById(imgId).src = e.target.result;
                document.getElementById(imgId).style.display = 'block';
                document.getElementById(buttonId).style.display = 'block';
            }

            reader.readAsDataURL(input.files[0]);

            document.getElementById(labelId).innerText = fileName;
            document.getElementById(hiddenId).value = fileName;
            document.getElementById(hiddenDeleteId).value = 'false';
        }
    }


    function deleteImage(imgId, hiddenDeleteId, labelId, buttonId) {
        if (confirm('@Html.Raw(Message.M_Q0001)')) {
            document.getElementById(imgId).style.display = 'none';
            document.getElementById(hiddenDeleteId).value = 'true';
            document.getElementById(labelId).innerText = '';
            document.getElementById(buttonId).style.display = 'none';
        }
    }

</script>
</html>
