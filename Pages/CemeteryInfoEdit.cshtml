@page
@model YasiroRegrave.Pages.CemeteryInfoEditModel
@{
@using YasiroRegrave.Pages.common;
Layout = null;
}
<head>
    <meta charset="utf-8" />
    <title>墓所情報編集</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/UserEdit.css">
    <link rel="stylesheet" href="~/css/SideBar.css">
</head>
<body>
    <div class="container-fluid d-flex">
        <div class="sidebar">
            <div class="sidebar-header">
                <a href="https://www.yasiro.co.jp/reien/ikoma/">
                    <img src="~/images/yasiro.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <ul class="sidebar-menu">
                <li><a href="/UserList">ユーザー情報一覧</a></li>
                <li><a href="/VenderList">販売会社情報一覧</a></li>
                <li><a href="/ReienList">メール送信先一覧</a></li>
                <li><a href="/CemeteryInfoList">墓所情報一覧</a></li>
            </ul>
        </div>
        <div class="content">
<div class="container">
    <form method="post">
        <div class="header-container">
            <img src="~/images/user.png" alt="User Icon" class="header-icon">
            <h2 class="header-title">墓所情報編集</h2>
            <div class="header-form">
                <button type="button" class="btn btn-secondary" onclick="onclickBack()">戻る</button>
                <input type="hidden" name="index" value="@Model.CemeteryInfoIndex" />
            <button class="btn btn-primary new-user-btn" type="submit">保存</button>
        </div>
        </div>

        <div class="col-md-6 p-0">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label for="ReienName">霊園名</label>
                        <span asp-validation-for="ReienName" class="text-danger"></span>
                        <input type="text" asp-for="ReienName" class="form-control" value="@Model.ReienName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="AreaName">エリア名</label>
                        <span asp-validation-for="AreaName" class="text-danger"></span>
                        <input type="text" asp-for="AreaName" class="form-control" value="@Model.AreaName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="SectionName">区画名</label>
                        <span asp-validation-for="SectionName" class="text-danger"></span>
                        <input type="text" asp-for="SectionName" class="form-control" value="@Model.SectionName" readonly>
                    </div>
                    <div class="form-group">
                        <label for="CemeteryName">墓所名</label>
                        <span asp-validation-for="CemeteryName" class="text-danger"></span>
                        <input type="text" asp-for="CemeteryName" class="form-control" value="@Model.CemeteryName" readonly>
                    </div>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <label for="Image1Fname">墓石画像1</label>
                                        <span asp-validation-for="Image1Fname" class="text-danger"></span>
                                        <input type="file" id="Image1Fname" class="form-control-file" onchange="previewImage(this, 'image1Preview', 'hiddenImage1Fname')">
                                        <input type="hidden" id="hiddenImage1Fname" name="Image1Fname">
                                        <img id="image1Preview" src="" alt="プレビュー画像1" style="display: none; max-width: 100%; margin-top: 10px;">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="Image2Fname">墓石画像2</label>
                                        <span asp-validation-for="Image2Fname" class="text-danger"></span>
                                        <input type="file" id="Image2Fname" class="form-control-file" onchange="previewImage(this, 'image2Preview', 'hiddenImage2Fname')">
                                        <input type="hidden" id="hiddenImage2Fname" name="Image2Fname">
                                        <img id="image2Preview" src="" alt="プレビュー画像2" style="display: none; max-width: 100%; margin-top: 10px;">
                                    </div>
                                </div>
                </form>
</div>
</body>
<script>
    let editDataStruct = {
        ReienName: '',
        AreaName: '',
        SectionName: '',
        CemeteryName: '',
        Image1Fname: '',
        Image2Fname: '',
    };
    let initData = Object.assign({}, editDataStruct);
    let editData = Object.assign({}, editDataStruct);
    var confMessage = '@Html.Raw(Message.M_Q0002)';

    document.addEventListener('DOMContentLoaded', function () {
        setEditData(initData);
    });

    function onclickBack() {
        setEditData(editData);
        if (!cmpEditData(initData, editData)) {
            if (!confirm(confMessage)) {
                return;
            }
        }
        window.location.href = '/CemeteryInfoList';
    }

    function setEditData(data) {
        data.ReienName = document.getElementById('ReienName').value;
        data.AreaName = document.getElementById('AreaName').value;
        data.SectionName = document.getElementById('SectionName').value;
        data.CemeteryName = document.getElementById('CemeteryName').value;
        data.Image1Fname = document.getElementById('Image1Fname').value;
        data.Image2Fname = document.getElementById('Image2Fname').value;
    }

    function cmpEditData(initData, editData) {
        return initData.ReienName === editData.ReienName
            && initData.AreaName === editData.AreaName
            && initData.SectionName === editData.SectionName
            && initData.CemeteryName === editData.CemeteryName
            && initData.Image1Fname === editData.Image1Fname
            && initData.Image2Fname === editData.Image2Fname;
    }
    //画像アップロード用
    function previewImage(input, previewId, hiddenInputId) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var previewImage = document.getElementById(previewId);
                previewImage.src = e.target.result;
                previewImage.style.display = 'block';
            }
            reader.readAsDataURL(input.files[0]);

            // ファイル名を隠しフィールドに設定
            document.getElementById(hiddenInputId).value = input.files[0].name;
        }
    }
</script>