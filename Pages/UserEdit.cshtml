@page
@model YasiroRegrave.Pages.UserEditModel
@{
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/UserEdit.css">
</head>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>ユーザー情報編集</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label for="vender">販売会社</label>
                            <select asp-for="SelectedVenderName" asp-items="@(new SelectList(Model.VenderNames))" class="form-control">
                                <option value="">選択してください</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Id">ID</label>
                            <input type="text" asp-for="Id" class="form-control" disabled>
                        </div>
                        <div class="form-group">
                            <label for="Name">名前</label>
                            <input type="text" asp-for="Name" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="Password">パスワード</label>
                            <input type="password" asp-for="Password" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">保存</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>