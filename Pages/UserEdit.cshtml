@page
@model YasiroRegrave.Pages.UserEditModel
@{
    @using YasiroRegrave.Pages.common;
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <title>ユーザー情報編集</title>
    <meta name="google" content="notranslate" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="~/css/header.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="~/css/UserEdit.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="~/css/SideBar.css?v=@DateTime.Now.Ticks">
</head>
<body>
    <div class="container-fluid d-flex">
        <div class="sidebar">
            <div class="sidebar-header">
                <a href="https://www.yasiro.co.jp/reien/ikoma/">
                    <img src="~/images/yasiro.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <div class="sidebar-header">
                <a href="/PlotSelection">
                    <img src="~/images/akikukaku.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <ul class="sidebar-menu">
                <li><a href="/UserList">ユーザー情報一覧</a></li>
                <li><a href="/VenderList">販売会社情報一覧</a></li>
                <li><a href="/ReienList">メール送信先一覧</a></li>
                <li><a href="/CemeteryInfoList">墓所情報一覧</a></li>
            </ul>
            @if (Model.LoginId != null && Model.LoggedInUser != null)
            {
                <div class="sidebar-footer">
                    <span>@Model.LoggedInUser.VenderName<br /></span>
                    <span>@Model.LoggedInUser.Name</span>
                </div>
            }
        </div>
        <div class="content">
            <div class="container mt-5">
                <form method="post">
                    <div class="header-container">
                        <img src="~/images/user.png" alt="User Icon" class="header-icon">
                        <h2 class="header-title">ユーザー情報編集</h2>
                        <div class="header-form">
                            <button type="button" class="btn btn-secondary" onclick="onclickBack()">戻る</button>
                            <input type="hidden" name="index" value="@Model.Index" />
                            <button class="btn btn-primary new-user-btn" type="submit">保存</button>
                        </div>
                    </div>
                    <div class="col-md-6 p-0">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="vender">販売会社</label>
                                    <span asp-validation-for="SelectVenderIndex" class="text-danger"></span>
                                    <select asp-for="SelectVenderIndex" class="form-control">
                                        <option value="">選択してください</option>
                                        @foreach (var vender in Model.Venders)
                                        {
                                            <option value="@vender.VenderIndex" selected="@(Model.SelectVenderIndex == vender.VenderIndex? "selected" : null)">@vender.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="Name">名前</label>
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <input type="text" asp-for="Name" class="form-control" value="@Model.Name" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <label for="Id">ログインID</label>
                                    <span asp-validation-for="Id" class="text-danger"></span>
                                    <input type="text" asp-for="Id" class="form-control" value="@Model.Id" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <label for="Password">パスワード</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <input type="password" asp-for="Password" class="form-control" value="@Model.Password" autocomplete="new-password">
                                </div>
                                <div class="form-group">
                                    <label for="Mail_Address">メールアドレス</label>
                                    <span asp-validation-for="MailAddress" class="text-danger"></span>
                                    <input type="text" asp-for="MailAddress" class="form-control" value="@Model.MailAddress" autocomplete="off">
                                </div>
                                <div class="form-group">
                                    <label for="Authority">権限</label>
                                    <span asp-validation-for="Authority" class="text-danger"></span>
                                    <select asp-for="Authority" class="form-control">
                                        <option value="0" selected="@(Model.Authority == 0 ? "selected" : null)">管理者</option>
                                        <option value="1" selected="@(Model.Authority == 1 ? "selected" : null)">担当者</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="Cemeteries">担当霊園</label>
                                    <span asp-validation-for="SelectedReiens" class="text-danger"></span>
                                    <div>
                                        @foreach (var reien in Model.reiens)
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" value="@reien.ReienIndex" name="SelectedReiens" id="reien-@reien.ReienIndex"
                                                @(Model.SelectedReiens.Contains(reien.ReienIndex) ? "checked" : "")>
                                                <label class="form-check-label" for="reien-@reien.ReienIndex">@reien.ReienName</label>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    let editDataStruct = {
        Id: '',
        Name: '',
        Password: '',
        SelectVenderIndex: '',
    };
    let initData = Object.assign({}, editDataStruct);
    let editData = Object.assign({}, editDataStruct);
    var confMessage = '@Html.Raw(Message.M_Q0002)';

    document.addEventListener('DOMContentLoaded', function () {
        setEditData(initData);
    });

    function onclickBack() {
        setEditData(editData);
        if (!cmpEditData(initData, editData)) {
            if (!confirm(confMessage)) {
                return;
            }
        }
        window.location.href = '/UserList';
    }

    function setEditData(data) {
        data.Id = document.getElementById('Id').value;
        data.Name = document.getElementById('Name').value;
        data.Password = document.getElementById('Password').value;
        data.SelectVenderIndex = document.getElementById('SelectVenderIndex').value;
    }

    function cmpEditData(initData, editData) {
        return initData.Id === editData.Id
            && initData.Name === editData.Name
            && initData.Password === editData.Password
            && initData.SelectVenderIndex === editData.SelectVenderIndex
    }
</script>
