@page
@model YasiroRegrave.Pages.UserEditModel
@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/UserEdit.css">
</head>

<div class="container mt-5">
    <form method="post">
        <div class="header-container">
            <img src="~/images/user.png" alt="User Icon" class="header-icon">
            <h2 class="header-title">ユーザー情報編集</h2>

            <input type="hidden" name="index" value="@Model.UserIndex"/>
            <button class="btn btn-primary new-user-btn" type="submit">保存</button>
        </div>

    <div class="col-md-6 p-0">
        <div class="card">
            <div class="card-body">
                    <div class="form-group">
                        <label for="vender">販売会社</label>
                        <select asp-for="SelectVenderIndex" class="form-control">
                            <option value="">選択してください</option>
                            @foreach (var vender in Model.Venders)
                            {
                                <option value="@vender.Index" selected="@(Model.SelectVenderIndex == vender.Index? "selected" : null)">@vender.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="Id">ID</label>
                        <span asp-validation-for="Id" class="text-danger"></span>
                        <input type="text" asp-for="Id" class="form-control" value="@Model.Id">
                    </div>
                    <div class="form-group">
                        <label for="Name">名前</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <input type="text" asp-for="Name" class="form-control" value="@Model.Name">
                    </div>
                    <div class="form-group">
                        <label for="Password">パスワード</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <input type="password" asp-for="Password" class="form-control" value="@Model.Password">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
