<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
    <link href="~/css/site.css?v=@DateTime.Now" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <header id="header">
        <div id="header-container">
            <a href="/PlotArea">
                <img src="~/images/logo_yasiro.png" alt="ヤシロのロゴ" id="logo">
                <span id="site-title">大阪生駒霊園</span>
            </a>
            @if (ViewBag.LoggedInUser != null)
            {
                <div class="login-info">
                    <span>＜ログインユーザー＞<br /></span>
                    <span>@ViewBag.LoggedInUser.VenderName<br /></span>
                    <span>@ViewBag.LoggedInUser.Name</span>
                    <div class="logout-button">
                        <form method="post" asp-page-handler="Logout">
                            <button type="submit" class="btn btn-danger">ログアウト</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </header>
    <div class="body-container">
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer id="footer">
        <p>Copyright (C) 大阪生駒霊園 All Rights Reserved.</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="js/tagmanager.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
