@page
@model YasiroRegrave.Pages.VenderEditModel
@{
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/UserEdit.css">
    <link rel="stylesheet" href="~/css/SideBar.css">
</head>
<div class="sidebar">
    <div class="sidebar-header">
        <a href="https://www.yasiro.co.jp/reien/ikoma/">
            <img src="~/images/yasiro.png" alt="Sidebar Icon" class="sidebar-icon">
        </a>
    </div>
    <ul class="sidebar-menu">
        <li><a href="https://localhost:7147/UserList">ユーザー情報一覧</a></li>
        <li><a href="https://localhost:7147/VenderList">販売会社情報一覧</a></li>
        <li><a href="https://localhost:7147/ReienList">メール送信先一覧</a></li>
        <li><a href="https://localhost:7147/CemeteryInfoList">墓所情報一覧</a></li>
    </ul>
</div>
<div class="container mt-5">
    <form method="post">
        <div class="header-container">
            <img src="~/images/user.png" alt="User Icon" class="header-icon">
            <h2 class="header-title">販売会社情報編集</h2>

            <input type="hidden" name="index" value="@Model.Index"/>
            <button class="btn btn-primary new-user-btn" type="submit">保存</button>
        </div>

        <div class="col-md-6 p-0">
            <div class="card">
                <div class="card-body">
                    <div class="form-group">
                        <label for="Name">名前</label>
                        <span asp-validation-for="VenderName" class="text-danger"></span>
                        <input type="text" asp-for="VenderName" class="form-control" value="@Model.VenderName">
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
