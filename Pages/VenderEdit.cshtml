@page
@model YasiroRegrave.Pages.VenderEditModel
@{
    @using YasiroRegrave.Pages.common;
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <title>販売会社情報編集</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/UserEdit.css">
    <link rel="stylesheet" href="~/css/SideBar.css">
</head>
<body>
    <div class="container-fluid d-flex">
        <div class="sidebar">
            <div class="sidebar-header">
                <a href="https://www.yasiro.co.jp/reien/ikoma/">
                    <img src="~/images/yasiro.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <div class="sidebar-header">
                <a href="/PlotSelection">
                    <img src="~/images/akikukaku.png" alt="Sidebar Icon" class="sidebar-icon">
                </a>
            </div>
            <ul class="sidebar-menu">
                <li><a href="/UserList">ユーザー情報一覧</a></li>
                <li><a href="/VenderList">販売会社情報一覧</a></li>
                <li><a href="/ReienList">メール送信先一覧</a></li>
                <li><a href="/CemeteryInfoList">墓所情報一覧</a></li>
            </ul>
        </div>
        <div class="content">
            <div class="container mt-5">
                <form method="post">
                    <div class="header-container">
                        <img src="~/images/user.png" alt="User Icon" class="header-icon">
                        <h2 class="header-title">販売会社情報編集</h2>
                        <div class="header-form">
                            <button type="button" class="btn btn-secondary" onclick="onclickBack()">戻る</button>
                            <input type="hidden" name="index" value="@Model.Index" />
                            <button class="btn btn-primary new-user-btn" type="submit">保存</button>
                        </div>
                    </div>
                    <div class="col-md-6 p-0">
                        <div class="card">
                            <div class="card-body">
                                <div class="form-group">
                                    <label for="Name">名前</label>
                                    <span asp-validation-for="VenderName" class="text-danger"></span>
                                    <input type="text" asp-for="VenderName" class="form-control" value="@Model.VenderName" autocomplete="off">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

<script>
    let editDataStruct = {
        VenderName: '',
    };
    let initData = Object.assign({}, editDataStruct);
    let editData = Object.assign({}, editDataStruct);
    var confMessage = '@Html.Raw(Message.M_Q0002)';

    document.addEventListener('DOMContentLoaded', function () {
        setEditData(initData);
    });

    function onclickBack() {
        setEditData(editData);
        if (!cmpEditData(initData, editData)) {
            if (!confirm(confMessage)) {
                return;
            }
        }
        window.location.href = '/VenderList';
    }

    function setEditData(data) {
        data.VenderName = document.getElementById('VenderName').value;
    }

    function cmpEditData(initData, editData) {
        return initData.VenderName === editData.VenderName
    }
</script>